<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/scheduled"
            android:id="@+id/textView"
            android:layout_row="1"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/current"
            android:id="@+id/textView2"
            android:layout_row="1"
            android:layout_column="13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/avg_speed"
            android:id="@+id/textView4"
            android:layout_row="3"
            android:layout_column="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="000.00"
            android:id="@+id/planedAvgSpeed"
            android:layout_row="3"
            android:layout_column="2"
            android:inputType="numberDecimal"
            android:editable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="000.00"
            android:id="@+id/actualAvgSpeed"
            android:layout_row="3"
            android:layout_column="13"
            android:inputType="numberDecimal"
            android:editable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/distance"
            android:id="@+id/textView5"
            android:layout_row="4"
            android:layout_column="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="000.00"
            android:id="@+id/planedDistance"
            android:layout_row="4"
            android:layout_column="2"
            android:inputType="numberDecimal"
            android:editable="true" />
<!--        android:background="@android:color/transparent"-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="000.00"
            android:id="@+id/actualDistance"
            android:layout_row="4"
            android:layout_column="13"
            android:inputType="numberDecimal" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btClearDistance"
            android:layout_row="4"
            android:layout_column="14"
            android:background="@drawable/clear" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/total_distance"
            android:id="@+id/textView7"
            android:layout_row="2"
            android:layout_column="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/planedTotalDistance"
            android:layout_row="2"
            android:layout_column="2"
            android:text="000.00" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actualTotalDistance"
            android:layout_row="2"
            android:layout_column="13"
            android:text="000.00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/time"
            android:id="@+id/textView6"
            android:layout_row="5"
            android:layout_column="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="00:00:00"
            android:id="@+id/planedTime"
            android:layout_row="5"
            android:layout_column="2"
            android:inputType="time"
            android:editable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="00:00:00"
            android:id="@+id/actualTime"
            android:layout_row="5"
            android:layout_column="13"
            android:inputType="time" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btClearTime"
            android:layout_row="5"
            android:layout_column="14"
            android:background="@drawable/clear" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:text="@string/next"
            android:id="@+id/btNext"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_columnSpan="14" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/listView"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_columnSpan="14"
            android:longClickable="false" />

    </GridLayout>
</RelativeLayout>
